<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/home_dest"
        android:name="bu.ac.kr.movieratingservice.ui.home.HomeFragment"
        android:label="영화"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_Dest_to_movie_reviews_dest"
            app:destination="@id/movie_reviews_dest" />
    </fragment>

    <fragment
        android:id="@+id/my_page_dest"
        android:name="bu.ac.kr.movieratingservice.ui.dashboard.DashboardFragment"
        android:label="내 리뷰"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_my_page_dest_to_movie_reviews_dest"
            app:destination="@id/movie_reviews_dest" />
    </fragment>

    <fragment
        android:id="@+id/movie_reviews_dest"
        android:name="bu.ac.kr.movieratingservice.ui.notifications.NotificationsFragment"
        android:label="영화 상세"
        tools:layout="@layout/fragment_notifications" />
</navigation>